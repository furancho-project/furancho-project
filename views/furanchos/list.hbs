<h1 class="mb-4">{{#if currentUser}}Ola {{currentUser.name}}!{{else}}{{/if}}</h1>


<form action="/furanchos" method="GET">
    <div class="input-group mb-3">
        <span class="input-group-text"><i class="fa fa-wine-bottle"></i></span>
        <input type="text" name="name" value="{{ query.name }}" class="form-control"
            placeholder="Escribe o nome do furancho...">
        <span class="input-group-text"><i class="fa fa-globe"></i></span>
        <input type="text" name="address" value="{{ query.address }}" class="form-control g-places-finder"
            placeholder="Escribe o seu enderezo...">
        <button class="btn btn-outline-secondary" type="submit"><i class="fa fa-search"></i></button>
    </div>

    <input type="hidden" name="lat" value="{{ query.lat }}" />
    <input type="hidden" name="lng" value="{{ query.lng }}" />
</form>

<form action="/furanchos" method="GET">
    <div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" name="accesibility" {{#if query.accesibility}}
                checked{{/if}}>
            <label class="form-check-label">
                Accesibilidade
            </label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" name="terrace" {{#if query.terrace}} checked {{/if}}>
            <label class="form-check-label">
                Zona exterior
            </label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" name="opened" {{#if query.opened}} checked {{/if}}>
            <label class="form-check-label">
                Aberto hoxe
            </label>
        </div>
        <button type="submit" class="btn btn-success">Listo!</button>


    </div>
</form>


<div class="row my-3">
    <div class="col-12">
        {{markers furanchos}}
        <div class="g-map"></div>
    </div>
</div>

<br>
<br>

<div class="row">
    {{#each furanchos as |furancho|}}
    <div class="col-4">
        <div class="card mb-3">
            <img src="{{furancho.image}}" class="card-img-top" alt="...">
            <div class="card-body">
                <h4 class="card-title">{{furancho.name}}</h4>
                <h4>
                    {{#if furancho.accesibility}}<i class="fa-solid fa-wheelchair-move icon">&nbsp;</i>{{else}}{{/if}}
                    {{#if furancho.menu}}<i class="fa-solid fa-utensils icon">&nbsp;</i>{{else}}{{/if}}
                    {{#if furancho.terrace}}<i class="fa-solid fa-tree icon">&nbsp;</i>{{else}}&nbsp;{{/if}}</p>
                </h4>
                <p class="card-text"><b>Enderezo:</b><br>{{furancho.address}}</p>
                <div class="container p-0">
                    <div class="d-flex justify-content-evenly">
                        <div class="col-6">
                            <p><b>Apertura:</b><br>{{prettyDate furancho.openAt}}</p>
                        </div>
                        <div class="col-6">
                            <p><b>Peche:</b><br>{{closingDate furancho.openAt}}</p>
                        </div>
                    </div>
                </div>
                <div class="d-grid">
                    <a href="/furanchos/{{furancho.id}}/detail" class="btn btn-success">Ver furancho</a>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>