<div class="row justify-content-center">
  <div class="col-12 col-md-6 col-lg-8">

    <h2>Engade un novo furancho</h2>

    <form action="/furanchos/new" method="POST" enctype="multipart/form-data">

      <div class="input-group mb-2">
        <span class="input-group-text"><i class="fa fa-wine-bottle fa-fw"></i></span>
        <input type="text" name="name" value="{{furancho.name}}"
          class="form-control {{#if errors.name}}is-invalid{{/if}}" placeholder="Nome do Furancho">
        {{#if errors.name}}<div class="invalid-feedback">{{errors.name}}</div>{{/if}}
      </div>

      <div class="d-flex justify-content-evenly">
        <div class="col-6"><span>Teléfono:</span></div>
        <div class="col-6"><span>Imaxe do furancho:</span></div>
      </div>

      <div class="d-flex justify-content-evenly">
        <div class="input-group mb-2">
          <span class="input-group-text"><i class="fa fa-phone fa-fw"></i></span>
          <input type="tel" name="phone" value="{{furancho.phone}}"
            class="form-control {{#if errors.phone}}is-invalid{{/if}}" placeholder="Teléfono">
          {{#if errors.phone}}<div class="invalid-feedback">{{errors.phone}}</div>{{/if}}
        </div>
        <div class="input-group mb-2">
          <span class="input-group-text proba-color"><i class="fa fa-picture-o fa-fw"></i></span>
          <input type="file" name="image" value="{{ furancho.image }}"
            class="form-control {{#if errors.image }}is-invalid{{/if}}" placeholder="Sube unha URL de imaxe" />
          {{#if errors.image }}<div class="invalid-feedback">{{ errors.image }}</div>{{/if}}
        </div>
      </div>

      <span>Enderezo:</span>
      <div class="input-group mb-2">
        <span class="input-group-text proba-color"><i class="fa fa-envelope fa-fw"></i></span>
        <input name="address" value="{{furancho.address}}"
          class="form-control g-places-finder {{#if errors.address}}is-invalid{{/if}}" placeholder="Enderezo">
        {{#if errors.address}}<div class="invalid-feedback">{{errors.address}}</div>{{/if}}
      </div>

      <input type="hidden" name="lat" value="{{furancho.lat}}" />
      <input type="hidden" name="lng" value="{{furancho.lng}}" />

      <div class="d-flex justify-content-evenly">
        <div class="col-4"><span>Accesibilidade:</span></div>
        <div class="col-4"><span>Zona exterior:</span></div>
        <div class="col-4"><span>Data de apertura:</span></div>
      </div>

      <div class="d-flex justify-content-evenly">
        <div class="input-group mb-2">
          <span class="input-group-text"><i class="fa-brands fa-accessible-icon fa-fw"></i></span>
          <select name="accesibility" value="{{furancho.accesibility}}" class="form-control">
            <option value="true" selected>Si</option>
            <option value="false">Non</option>
          </select>
        </div>
        <div class="input-group mb-2">
          <span class="input-group-text"><i class="fa-solid fa-sun fa-fw"></i></span>
          <select name="terrace" value="{{furancho.terrace}}" class="form-control">
            <option value="true" selected>Si</option>
            <option value="false">Non</option>
          </select>
        </div>
        <div class="input-group mb-2">
          <span class="input-group-text"><i class="fa fa-calendar fa-fw"></i></span>
          <input type="date" name="openAt" value="{{furancho.openAt}}"
            class="form-control {{#if errors.openAt}}is-invalid{{/if}}">
          {{#if errors.openAt}}<div class="invalid-feedback">{{errors.openAt}}</div>{{/if}}
        </div>

      </div>


      <span>Menú:</span>
      <div name="menu" value="{{furancho.menu}}" class="input-group mb-2">
        <span class="input-group-text mb-2"><i class="fa-solid fa-utensils fa-fw"></i></span>
        {{#each menus as | menu |}}
        <div class="form-check input-group">
          <input name="menu" class="form-check-input" type="checkbox" value="{{menu}}">
          <label class="form-check-label">
            &nbsp; {{menu}}
          </label>
        </div>
        {{/each}}
        {{#if errors.menu}}<div class="invalid-feedback">{{errors.menu}}</div>{{/if}}
      </div>

       <span>Descripción:</span>
      <div class="input-group mb-2">
        <span class="input-group-text"><i class="fa fa-clock-o fa-fw"></i></span>
        <input name="description" value="{{furancho.description}}"
          class="form-control {{#if errors.description}}is-invalid{{/if}}" placeholder="Descripción do furancho">
        {{#if errors.description}}<div class="invalid-feedback">{{errors.description}}</div>{{/if}}
      </div>

      <div class="d-grid">
        <button type="submit" class="btn btn-success">Listo!</button>
      </div>

    </form>

  </div>
</div>